<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="88dp"
        android:contentDescription="@string/profile_pic_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/user_profile_placeholder" />

    <Button
        android:id="@+id/btn_company_profile"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#000000"
        android:text="company profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_new_offer"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#000000"
        android:text="new offer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_company_profile" />

    <Button
        android:id="@+id/btn_company_offers"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#000000"
        android:text="company offers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_new_offer" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#000000"
        android:text="@string/logout_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_company_offers" />

</androidx.constraintlayout.widget.ConstraintLayout>